---
import { getCollection } from "astro:content";

// Obtener últimos 4 artículos ordenados por fecha
const posts = (await getCollection("blog"))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 4);
---

<section class="w-full py-24 bg-white">
  <div class="max-w-7xl mx-auto px-6">
    <div
      class="flex flex-col md:flex-row md:items-end justify-between mb-12 gap-4"
    >
      <div>
        <h2
          class="text-3xl md:text-4xl font-extrabold text-slate-900 tracking-tight"
        >
          Bits & Finanzas
        </h2>
        <p class="text-slate-500 mt-2 text-lg">
          Análisis sobre tecnología, optimización y contabilidad moderna.
        </p>
      </div>
      <a
        href="/blog/"
        class="hidden md:inline-flex items-center text-emerald-600 font-bold hover:text-emerald-700 transition-colors"
      >
        Ver todos los artículos
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-5 w-5 ml-1"
          viewBox="0 0 20 20"
          fill="currentColor"
        >
          <path
            fill-rule="evenodd"
            d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z"
            clip-rule="evenodd"></path>
        </svg>
      </a>
    </div>

    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-4">
      {
        posts.map((post) => (
          <a
            href={`/blog/${post.slug}/`}
            class="group flex flex-col h-full bg-slate-50 rounded-3xl border border-slate-100 p-2 hover:bg-white hover:border-emerald-200 hover:shadow-xl hover:shadow-emerald-900/5 transition-all duration-300"
          >
            <div class="h-48 w-full bg-slate-200 rounded-2xl overflow-hidden relative mb-4">
              <div class="absolute inset-0 bg-gradient-to-br from-slate-900/20 to-slate-900/60 z-10 group-hover:from-emerald-600/20 group-hover:to-emerald-900/80 transition-all duration-500" />

              <div class="absolute top-4 left-4 z-20">
                <span class="px-3 py-1 bg-white/90 backdrop-blur-sm text-[10px] font-bold uppercase tracking-widest text-slate-900 rounded-full shadow-sm">
                  {post.data.category || "Artículo"}
                </span>
              </div>

              <div class="absolute inset-0 flex items-center justify-center opacity-20 group-hover:opacity-40 transition-opacity">
                <svg
                  class="w-20 h-20 text-white"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="1"
                    d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                  />
                </svg>
              </div>
            </div>

            <div class="px-4 pb-6 flex flex-col flex-1">
              <time class="text-[11px] font-mono text-slate-400 mb-2 uppercase">
                {new Date(post.data.date).toLocaleDateString("es-ES", {
                  year: "numeric",
                  month: "long",
                  day: "numeric",
                })}
              </time>

              <h3 class="text-xl font-bold text-slate-900 mb-3 leading-snug group-hover:text-emerald-600 transition-colors line-clamp-2">
                {post.data.title}
              </h3>

              {post.data.description && (
                <p class="text-slate-500 text-sm line-clamp-3 mb-6 flex-1">
                  {post.data.description}
                </p>
              )}

              <div class="flex items-center text-sm font-bold text-slate-900 group-hover:translate-x-2 transition-transform duration-300">
                Leer reporte <span class="ml-2 text-emerald-500">→</span>
              </div>
            </div>
          </a>
        ))
      }
    </div>

    <div class="mt-12 flex justify-center md:hidden">
      <a
        href="/blog/"
        class="w-full text-center px-8 py-4 bg-slate-900 text-white font-bold rounded-2xl hover:bg-slate-800 transition shadow-lg"
      >
        Ver todos los artículos
      </a>
    </div>
  </div>
</section>
