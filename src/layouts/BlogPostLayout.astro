---
import "../styles/global.css";
import PageHeader from "../components/PageHeader.astro";
const { title, date, author, description } = Astro.props;
---
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <meta name="description" content={description}/>
  </head>
  <body class="bg-gray-50 text-gray-900 font-sans">
<PageHeader/>
    <main class="max-w-5xl mx-auto px-6 py-12 prose">
      <article class="bg-white rounded-lg shadow p-8">
        <header class="mb-8">
          <h1 class="text-4xl font-bold text-gray-900 mb-2">{title}</h1>
          <p class="text-gray-500 text-sm">
            {date ? new Date(date).toLocaleDateString() : ""} 
            {author ? ` | por ${author}` : ""}
          </p>
        </header>

        <div class="prose prose-lg max-w-full text-gray-800">
          <slot />
        </div>
      </article>
    </main>

    <footer class="bg-white shadow mt-12">
      <div class="max-w-7xl mx-auto px-6 py-6 text-center text-gray-500 text-sm">
        &copy; {new Date().getFullYear()} Mi Blog. Todos los derechos reservados.
      </div>
    </footer>
  </body>
</html>
