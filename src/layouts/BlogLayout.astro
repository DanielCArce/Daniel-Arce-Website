---
import '../styles/global.css';
import PageHeader from '../components/PageHeader.astro';
import FooterSection from '../components/FooterSection.astro';
const { title = "Blog" } = Astro.props;
---
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" href="/favicon.ico" />
    <meta
      name="title"
      content="Daniel C. Arce - Accountant & Fullstack Developer"
    />
    <meta name="description" content="Daniel C. Arce es un desarrollador de software fullstack y contador privado especializado en resolución problemas."/>
    <meta name="keywords" content="contador, desarrollador de software, fullstack, finanzas, contabilidad, desarrollo web, aplicaciones móviles, soluciones tecnológicas"
    />

    <!-- Open Graph / Facebook / LinkedIn -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://www.danielcarce.com/" />
    <meta
      property="og:title"
      content="Daniel C. Arce - Accountant & Fullstack Developer"
    />
    <meta
      property="og:description"
      content="Daniel C. Arce es un desarrollador de software fullstack y contador privado especializado en resolución problemas."
    />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content="https://www.danielcarce.com/" />
    <meta
      name="twitter:title"
      content="Daniel C. Arce - Accountant & Fullstack Developer"
    />
    <meta
      name="twitter:description"
      content="Daniel C. Arce es un desarrollador de software fullstack y contador privado especializado en resolución problemas."
    />
    <meta
      name="twitter:image"
      content="https://danielcarce.com/og-image.png"
    />
  </head>
  <body class="bg-gray-50 text-gray-900 font-sans">
<PageHeader />
    <main class="max-w-7xl mx-auto px-6 py-12">
      <section class="text-center mb-12">
        <h2 class="text-4xl font-bold text-gray-900 mb-4">Bienvenido a nuestro Blog</h2>
        <p class="text-gray-600 text-lg max-w-2xl mx-auto">
          Tips y estrategias en tecnología y contabilidad.
        </p>
      </section>

      <section class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <slot />
      </section>
    </main>
<FooterSection/>
  </body>
</html>