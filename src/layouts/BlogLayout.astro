---
import '../styles/global.css';
import PageHeader from '../components/PageHeader.astro';
const { title = "Blog" } = Astro.props;
---
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title ? `${title} | 30th Opps` : "30th Oppps"}</title>
<meta name="description" content="30th Opps ofrece desarrollo de software, contabilidad y servicios financieros en Costa Rica. Soluciones innovadoras para tu negocio.">
<meta name="keywords" content="30th Opps, software, contabilidad, finanzas, Costa Rica, desarrollo de software, servicios financieros, soluciones tecnológicas"/>

<!-- Open Graph / Facebook / LinkedIn -->
<meta property="og:type" content="website">
<meta property="og:url" content="https://www.30thopps.com/">
<meta property="og:title" content="30th Opps - Innovación en Software, Contabilidad y Finanzas">
<meta property="og:description" content="30th Opps ofrece desarrollo de software, contabilidad y servicios financieros en Costa Rica. Soluciones innovadoras para tu negocio.">
<meta property="og:image" content="https://darce.vercel.app/og-image.png">

<!-- Twitter -->
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:url" content="https://www.30thopps.com/">
<meta name="twitter:title" content="30th Opps - Innovación en Software, Contabilidad y Finanzas">
<meta name="twitter:description" content="30th Opps ofrece desarrollo de software, contabilidad y servicios financieros en Costa Rica. Soluciones innovadoras para tu negocio.">
<meta name="twitter:image" content="https://darce.vercel.app/og-image.png">
  </head>
  <body class="bg-gray-50 text-gray-900 font-sans">
<PageHeader />
    <main class="max-w-7xl mx-auto px-6 py-12">
      <section class="text-center mb-12">
        <h2 class="text-4xl font-bold text-gray-900 mb-4">Bienvenido a nuestro Blog</h2>
        <p class="text-gray-600 text-lg max-w-2xl mx-auto">
          Tips y estrategias en tecnología y contabilidad.
        </p>
      </section>

      <section class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <slot />
      </section>
    </main>

    <footer class="bg-white shadow mt-12">
      <div class="max-w-7xl mx-auto px-6 py-6 text-center text-gray-500 text-sm">
        &copy; {new Date().getFullYear()} 30th Opps Blog. Todos los derechos reservados.
      </div>
    </footer>
  </body>
</html>