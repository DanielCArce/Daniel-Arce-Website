---
import Layout from '../../layouts/BlogLayout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog');
---

<Layout title="Blog">
  {posts.map(post => (
    <a href={`/blog/${post.slug}`} class="block bg-white rounded-lg shadow hover:shadow-lg transition p-6">
      <h3 class="text-xl font-bold text-gray-900 mb-2">{post.data.title}</h3>
      <p class="text-gray-700 mb-4">{post.data.description}</p>
      <p class="text-gray-500 text-sm">Autor: {post.data.author}</p>
      <p class="text-gray-500 text-sm">{new Date(post.data.date).toLocaleDateString()}</p>
    </a>
  ))}
</Layout>
